{
    "name": "csv-viewer",
    "productName": "CSV Viewer",
    "version": "1.1.5",
    "homepage": "https://www.github.com/rpodsada/csv-viewer#readme",
    "description": "A simple form-style viewer to inspect records in a CSV file.",
    "author": "Richard Podsada <rpodsada@gmail.com> (https://www.github.com/rpodsada)",
    "license": "MIT",
    "copyright": "Copyright (c) 2023 ${author}",
    "main": "build/main.js",
    "scripts": {
        "start": "NODE_ENV=development concurrently \"npm run watch-ts\" \"npm run watch-css\"",
        "electron": "electron ./build/main.js",
        "build": "tsc && npm run prepare && electron-builder",
        "build-windows": "tsc && npm run prepare && electron-builder --windows",
        "build-mac": "tsc && npm run prepare && electron-builder --mac",
        "build-linux": "tsc && npm run prepare && electron-builder --linux",
        "watch-ts": "tsc-watch --onSuccess \"npm run electron\"",
        "watch-css": "npx chokidar './src/**/*.css' -c 'npm run prepare'",
        "prepare": "sh prepare-assets.sh"
    },
    "build": {
        "appId": "com.richardpodsada.csv-viewer",
        "productName": "CSV Viewer",
        "artifactName": "csv-viewer-setup-${version}.${ext}",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "icons/win/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "icons/mac/icon.icns"
        },
        "linux": {
            "category": "Utility",
            "icon": "icons/linux/512x512.png",
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "deb": {
            "maintainer": "${author}"
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220,
                    "type": "file"
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "files": [
            "./build/**/*",
            "./node_modules/**/*",
            "./package.json"
        ]
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.4.0",
        "electron-store": "^8.1.0",
        "highlight.js": "^11.8.0",
        "html": "^1.0.0",
        "papaparse": "^5.4.1",
        "path": "^0.12.7",
        "save-dev": "^0.0.1-security"
    },
    "devDependencies": {
        "@types/node": "^20.3.0",
        "@types/papaparse": "^5.3.7",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^8.2.0",
        "electron": "^25.1.0",
        "electron-builder": "^24.4.0",
        "electron-reload": "^2.0.0-alpha.1",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.1.3"
    }
}
